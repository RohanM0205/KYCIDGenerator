@{
    ViewData["Title"] = "KYC Already Exists";
    var existingKycId = TempData["ExistingKYCId"]?.ToString();
    var method = TempData["Method"]?.ToString();
}

<style>
    :root {
        --primary-color: #AC0C14;
        --primary-light: #d33a42;
        --primary-dark: #7a0008;
        --light-gray: #f5f5f5;
        --success-color: #28a745;
        --warning-color: #ffc107;
    }

    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f9f9f9;
        background-image: radial-gradient(circle at 10% 20%, rgba(172, 12, 20, 0.03) 0%, rgba(172, 12, 20, 0.03) 90%);
    }

    .kyc-exists-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 120px);
        padding: 3rem 1rem;
    }

    .kyc-exists-container {
        max-width: 800px;
        width: 100%;
        perspective: 1000px;
        position: relative;
    }

    .kyc-card {
        background: white;
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 15px 40px rgba(0,0,0,0.12);
        transform-style: preserve-3d;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .kyc-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 8px;
            background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
        }

        .kyc-card:hover {
            transform: translateY(-5px);
        }

    .kyc-header {
        text-align: center;
        margin-bottom: 2rem;
        position: relative;
    }

    .kyc-icon {
        font-size: 4rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
        animation: pulse 2s infinite;
    }

    h2 {
        color: var(--primary-dark);
        margin-bottom: 1rem;
        font-weight: 700;
        font-size: 2rem;
    }

    .kyc-id-display {
        background-color: var(--light-gray);
        border-left: 4px solid var(--primary-color);
        padding: 1rem;
        margin: 2rem 0;
        border-radius: 0 8px 8px 0;
        font-family: monospace;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .kyc-id-display i {
            color: var(--primary-color);
            font-size: 1.5rem;
        }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-top: 3rem;
        flex-wrap: wrap;
    }

    .btn {
        border: none;
        border-radius: 50px;
        padding: 15px 35px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
        cursor: pointer;
        font-size: 1rem;
        position: relative;
        overflow: hidden;
    }

        .btn::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(rgba(255,255,255,0.2), rgba(255,255,255,0));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .btn:hover::after {
            opacity: 1;
        }

    .btn-success {
        background-color: var(--success-color);
        color: white;
    }

    .btn-warning {
        background-color: var(--warning-color);
        color: #212529;
    }

    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .btn:active {
        transform: translateY(1px);
    }

    .info-text {
        color: #666;
        line-height: 1.6;
        text-align: center;
        margin: 1.5rem 0;
    }

    .pulse-circle {
        position: absolute;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, var(--primary-light) 0%, rgba(172, 12, 20, 0) 70%);
        border-radius: 50%;
        opacity: 0.1;
        z-index: -1;
        animation: float 15s infinite alternate ease-in-out;
    }

        .pulse-circle:nth-child(1) {
            top: -100px;
            left: -100px;
        }

        .pulse-circle:nth-child(2) {
            bottom: -50px;
            right: -100px;
            animation-delay: 2s;
        }

    @@keyframes pulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.1);
    }

    100% {
        transform: scale(1);
    }

    }

    @@keyframes float {
        0%

    {
        transform: translate(0, 0);
    }

    50% {
        transform: translate(20px, 20px);
    }

    100% {
        transform: translate(0, 0);
    }

    }

    @@media (max-width: 768px) {
        .kyc-card

    {
        padding: 2rem 1.5rem;
    }

    .action-buttons {
        flex-direction: column;
        gap: 1rem;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    }
</style>

<div class="kyc-exists-wrapper">
    <div class="kyc-exists-container">
        <div class="pulse-circle"></div>
        <div class="pulse-circle"></div>

        <div class="kyc-card">
            <div class="kyc-header">
                <div class="kyc-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h2>Duplicate KYC Record Detected</h2>
                <p class="info-text">
                    We found an existing KYC record for this @method. Please choose how you'd like to proceed:
                </p>

                <div class="kyc-id-display">
                    <i class="fas fa-fingerprint"></i>
                    <span>Existing KYC ID: <strong>@existingKycId</strong></span>
                </div>

                <p class="info-text">
                    <i class="fas fa-info-circle"></i> Using the existing record ensures data consistency, while creating a new one should only be done if this is a different entity.
                </p>
            </div>

            <div class="action-buttons">
                <form method="post" asp-action="UseExistingKyc">
                    <input type="hidden" name="kycId" value="@existingKycId" />
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check-circle"></i> Use Existing Record
                    </button>
                </form>

                <form method="post" asp-action="AddIndividual">
                    <input type="hidden" name="overrideAction" value="createNew" />
                    <input type="hidden" name="model.PAN" value="@TempData["PAN"]" />
                    <input type="hidden" name="model.Adhaar" value="@TempData["Adhaar"]" />
                    <input type="hidden" name="model.Method" value="@method" />
                    <input type="hidden" name="model.Mobile" value="@TempData["Mobile"]" />
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-plus-circle"></i> Create New Record
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

