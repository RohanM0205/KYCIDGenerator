<!-- Full CSS and Layout Styling -->
<style>
    :root {
        --primary-color: #AC0C14;
        --primary-light: #d33a42;
        --primary-dark: #7a0008;
        --light-gray: #f5f5f5;
    }

    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: var(--light-gray);
        margin: 0;
        padding: 0;
    }

    .container-wrapper {
        display: flex;
        flex-wrap: wrap;
        min-height: calc(100vh - 100px);
        margin-bottom: 65px;
    }

    .form-section {
        flex: 1 1 100%;
        padding: 3rem 2rem 5rem;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        max-width: 50%;
    }

    .form-body {
        flex-grow: 1;
        margin-bottom: 2rem;
    }

    .switch-method-section {
        text-align: center;
        margin-bottom: 2rem;
    }

        .switch-method-section h4 {
            color: var(--primary-dark);
            font-weight: 600;
            margin-bottom: 1rem;
        }

    .btn-toggle-group {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

        .btn-toggle-group button {
            padding: 10px 25px;
            border-radius: 30px;
            font-weight: 600;
            border: 2px solid var(--primary-color);
            background-color: white;
            color: var(--primary-color);
            transition: 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
        }

            .btn-toggle-group button.active,
            .btn-toggle-group button:hover {
                background-color: var(--primary-color);
                color: white;
                transform: scale(1.05);
            }

    .form-control {
        border-radius: 10px;
        height: 45px;
        transition: box-shadow 0.3s ease;
    }

        .form-control:hover,
        .form-control:focus {
            box-shadow: 0 0 5px rgba(172, 12, 20, 0.5);
        }

    .btn-primary {
        background-color: var(--primary-color);
        border: none;
        border-radius: 25px;
        padding: 10px 30px;
        font-weight: 600;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
        }

    .illustration-section {
        flex: 1;
        background: linear-gradient(to bottom right, var(--primary-color), var(--primary-light));
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: start;
        padding-top: 2rem;
        position: relative;
    }

        .illustration-section img.logo {
            height: 120px;
            width: auto;
            border-radius: 8px;
            margin-bottom: 2rem;
            transition: transform 0.3s ease;
        }

            .illustration-section img.logo:hover {
                transform: scale(1.05);
            }

        .illustration-section img.illustration {
            width: 80%;
            max-width: 400px;
            animation: float 6s ease-in-out infinite;
        }

    .disabled-captcha {
        background-color: #e9ecef;
        color: #6c757d;
        pointer-events: none;
    }

    @@keyframes float {
        0% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-15px);
        }

        100% {
            transform: translateY(0px);
        }
    }

    @@media (max-width: 768px) {
        .form-section, .illustration-section {
            max-width: 100%;
            flex: 1 1 100%;
        }

        .btn-toggle-group {
            flex-direction: column;
        }
    }
</style>

