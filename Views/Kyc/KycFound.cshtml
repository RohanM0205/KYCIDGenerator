 @model KYCIDGenerator.Models.KYC_Information

@{
    ViewData["Title"] = "KYC Found";
}

<!-- Custom CSS -->
<style>
    :root {
        --primary-color: #AC0C14;
        --primary-light: #d33a42;
        --primary-dark: #7a0008;
        --text-color: #333;
        --light-bg: #f9f9f9;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--light-bg);
        margin: 0;
        padding: 0;
        color: var(--text-color);
    }

    .kyc-container {
        display: flex;
        min-height: 100vh;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        gap: 3rem;
        flex-wrap: wrap;
    }

    .kyc-card {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
        animation: fadeInUp 0.6s ease-in-out;
    }

        .kyc-card h2 {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .kyc-card p {
            font-size: 1.1rem;
            margin-bottom: 0.8rem;
        }

        .kyc-card strong {
            color: var(--primary-dark);
        }

    .btn-primary {
        background-color: var(--primary-color);
        color: white;
        border: none;
        padding: 10px 28px;
        font-weight: 600;
        border-radius: 25px;
        display: block;
        margin: 2rem auto 0;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        }

    .illustration-box {
        flex: 1;
        max-width: 500px;
        text-align: center;
        animation: float 6s ease-in-out infinite;
    }

        .illustration-box img {
            width: 100%;
            max-width: 400px;
        }

    @@keyframes float {
        0%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-12px);
    }

    100% {
        transform: translateY(0);
    }

    }

    @@keyframes fadeInUp {
        0%

    {
        opacity: 0;
        transform: translateY(20px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@media (max-width: 768px) {
        .kyc-container

    {
        flex-direction: column;
        align-items: center;
    }

    .illustration-box {
        order: -1;
    }

    }
</style>

<div class="kyc-container">
    <!-- Illustration -->
    <div class="illustration-box">
        <img src="/images/KYCFound.png" alt="Verified Illustration">
    </div>

    <!-- KYC Info Card -->
    <div class="kyc-card">
        <h2>KYC Found ✅</h2>

        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>DOB:</strong> @(Model.DOB?.ToString("yyyy-MM-dd") ?? "N/A")</p>
        <p><strong>Address:</strong> @Model.Address1 @Model.Address2, @Model.City, @Model.State - @Model.Pin_Code</p>

        <form asp-action="Proceed" method="post">
            <input type="hidden" name="kycId" value="@Model.KYC_ID" />
            <button type="submit" class="btn btn-primary">Proceed</button>
        </form>
    </div>
</div>

<!-- Font Awesome if needed -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
