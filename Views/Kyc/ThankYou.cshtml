<!-- JS -->
<script>
    // Enhanced copy function with error handling
    function copyKycId() {
        const text = document.getElementById("kycId").innerText.replace('KYC Reference: ', '');
        const icon = document.querySelector('.copy-icon-btn i');
        const btn = document.querySelector('.copy-icon-btn');

        navigator.clipboard.writeText(text).then(() => {
            // Success feedback
            icon.classList.replace('fa-copy', 'fa-check');
            btn.style.backgroundColor = 'rgba(40, 167, 69, 0.2)';
            btn.style.color = 'var(--success-color)';

            // Reset after 2 seconds
            setTimeout(() => {
                icon.classList.replace('fa-check', 'fa-copy');
                btn.style.backgroundColor = 'rgba(172, 12, 20, 0.1)';
                btn.style.color = 'var(--primary-color)';
            }, 2000);
        }).catch(err => {
            console.error('Failed to copy text: ', err);
            // Fallback for browsers without clipboard API
            const textArea = document.createElement('textarea');
            textArea.value = text;
            document.body.appendChild(textArea);
            textArea.select();
            try {
                document.execCommand('copy');
                // Show success feedback even with fallback
                icon.classList.replace('fa-copy', 'fa-check');
                btn.style.backgroundColor = 'rgba(40, 167, 69, 0.2)';
                btn.style.color = 'var(--success-color)';
                setTimeout(() => {
                    icon.classList.replace('fa-check', 'fa-copy');
                    btn.style.backgroundColor = 'rgba(172, 12, 20, 0.1)';
                    btn.style.color = 'var(--primary-color)';
                }, 2000);
            } catch (err) {
                console.error('Fallback copy failed: ', err);
                alert('Failed to copy KYC ID. Please manually select and copy.');
            }
            document.body.removeChild(textArea);
        });
    }

    // Nuclear back-button prevention with multiple safeguards
    (function() {
        // Initial state push
        window.history.pushState(null, '', window.location.href);

        // Block back/forward navigation
        window.addEventListener('popstate', function(event) {
            // Extra protection - check if we're still on the same page
            if (window.location.pathname.toLowerCase().includes('kycapproved')) {
                window.history.pushState(null, '', window.location.href);
                // Force redirect after a very short delay to ensure state is pushed
                setTimeout(() => {
                    window.location.replace('/Account/Login');
                }, 50);
            }
        });

        // Detect page load from cache (bfcache)
        window.addEventListener('pageshow', function(event) {
            if (event.persisted) {
                // Immediate redirect if page was restored from cache
                window.location.replace('/Account/Login');
            }
        });

        // Additional protection against forward button
        window.addEventListener('beforeunload', function() {
            window.history.pushState(null, '', window.location.href);
        });

        // Prevent form resubmission
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }

        // Extra protection for keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Block Alt+Left arrow (common back shortcut)
            if (e.altKey && e.keyCode === 37) {
                e.preventDefault();
                window.location.replace('/Account/Login');
            }
            // Block Backspace key navigation (except in form fields)
            if (e.key === 'Backspace' &&
                !['INPUT', 'TEXTAREA', 'SELECT'].includes(document.activeElement.tagName)) {
                e.preventDefault();
            }
        });
    })();
</script>