@model string

@{
    ViewData["Title"] = "KYC Pending";
}

<style>
    :root {
        --primary-color: #AC0C14;
        --primary-light: #fcebec;
        --primary-dark: #7a0008;
        --text-color: #333;
        --light-bg: #f9f9f9;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--light-bg);
        margin: 0;
        padding: 0;
        color: var(--text-color);
    }

    .pending-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 2rem;
        text-align: center;
    }

    .logo {
        margin-bottom: 2rem;
    }

        .logo img {
            height: 130px;
            width: auto;
            border-radius: 8px;
        }

            .logo img:hover {
                transform: scale(1.05);
            }

    .pending-box {
        background-color: white;
        padding: 2.5rem;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 550px;
        width: 100%;
        animation: fadeInUp 0.6s ease-in-out;
    }

        .pending-box h2 {
            font-size: 2rem;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .pending-box p {
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
        }

    .kyc-id-box {
        background-color: var(--primary-light);
        border: 1px solid var(--primary-color);
        border-radius: 10px;
        padding: 1rem 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-weight: bold;
        font-size: 1.2rem;
        color: var(--primary-dark);
        margin-bottom: 1.5rem;
    }

    .copy-btn {
        background-color: var(--primary-color);
        border: none;
        color: white;
        padding: 8px 12px;
        border-radius: 50%;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
    }

        .copy-btn:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(0,0,0,0.1);
        }

    .illustration {
        max-width: 400px;
        margin-top: 2rem;
        animation: float 6s ease-in-out infinite;
    }

    @@keyframes float {
        0%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-12px);
    }

    100% {
        transform: translateY(0);
    }

    }

    @@keyframes fadeInUp {
        0%

    {
        opacity: 0;
        transform: translateY(30px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@media (max-width: 600px) {
        .pending-box

    {
        padding: 2rem;
    }

    .kyc-id-box {
        flex-direction: column;
        gap: 0.5rem;
        align-items: flex-start;
    }

    .copy-btn {
        align-self: flex-end;
    }

    }
</style>

<div class="pending-container">
    <!-- Logo -->
    <div class="logo">
        <img src="/images/infiniotaRed.png" alt="Logo" />
    </div>

    <!-- Content Box -->
    <div class="pending-box">
        <h2>⏳ KYC Verification in Progress</h2>
        <p>Your KYC request is currently under review.</p>

        <div class="kyc-id-box">
            <span>KYC ID: <strong id="kycId">  @Model</strong></span>
            <button class="copy-btn" onclick="copyKycId()" title="Copy KYC ID">
                <i class="fas fa-copy"></i>
            </button>
        </div>

        <p>
            We appreciate your patience as our team completes the verification.<br />
            You’ll be notified as soon as your KYC is approved.
        </p>
    </div>

    <!-- Illustration -->
    <img class="illustration" src="/images/KYCPending.png" alt="Pending Illustration">
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Script -->
<script>
    function copyKycId() {
        const text = document.getElementById("kycId").innerText;
        navigator.clipboard.writeText(text).then(() => {
            const btn = document.querySelector('.copy-btn');
            btn.innerHTML = '<i class="fas fa-check"></i>';
            setTimeout(() => {
                btn.innerHTML = '<i class="fas fa-copy"></i>';
            }, 2000);
        });
    }
</script>
